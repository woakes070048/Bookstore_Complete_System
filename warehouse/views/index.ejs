<!DOCTYPE html>
<html>
<head>
    <title>Order Page</title>
    <script src="/js/jquery.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/js/angular.min.js" type="text/javascript"></script>
    <link rel='stylesheet' href='/css/bootstrap.min.css'/>
    <script src="/js/order.js" type="text/javascript"></script>
    <script src="//rawgithub.com/stidges/jquery-searchable/master/dist/jquery.searchable-1.0.0.min.js"></script>
</head>
<body ng-app="app">
<div ng-controller="OrderTableController">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>Unprocessed Orders</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <table class="table" id="table">
                    <thead>
                    <tr>
                        <th>ISBN</th>
                        <th>Quantity</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr ng-repeat="order in unprocessedOrders">
                        <td>{{order.ISBN}}</td>
                        <td>{{order.quantity}}</td>
                        <td>
                            <button ng-click="sendStock(order.objectID, order.ISBN, order.quantity)">Send</button>
                        </td>
                    </tr>
                    </tbody>
                </table>
                <hr>
            </div>
        </div>
    </div>

    <br>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>Processed Orders</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <table class="table" id="table">
                    <thead>
                    <tr>
                        <th>Process Date</th>
                        <th>ISBN</th>
                        <th>Quantity</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr ng-repeat="order in processedOrders">
                        <td>{{order.date}}</td>
                        <td>{{order.ISBN}}</td>
                        <td>{{order.quantity}}</td>
                    </tr>
                    </tbody>
                </table>
                <hr>
            </div>
        </div>
    </div>
</div>
<br>

<div class="panel panel-danger"></div>

</body>
</html>
